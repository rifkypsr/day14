<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Projects</title>
  <!-- Import icon dari eksternal, site: fontawesome -->
  <script src="https://kit.fontawesome.com/a8c9218c8f.js" crossorigin="anonymous"></script>
  <!-- Import font dari eksternal, site: googlefont -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <!-- Import internal CSS -->
  <link rel="stylesheet" href="/assets/css/index.css">
  {{!-- <link rel="stylesheet" href="/assets/css/home.css"> --}}

  <link rel="stylesheet" href="/assets/css/myproject.css">
  <!-- Import Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #dddddd; font-family: 'Poppins', Arial, sans-serif; font-size: 20px;">

<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/assets/img/logo.png" style="height: 80px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/myproject">Add Project</a>
                </li>
            </ul>
        <a href="/contact"><button class="btn btn-dark" type="submit">Contact Me</button></a>
            </div>
    </div>
</nav>

      <!-- Projects Section -->
        <div class="container my-5">
          <h1 class="text-center mb-4">MY PROJECT</h1>
          <div class="row">
            {{#each projects}}
              <div class="col-md-4 mb-4">
                <div class="card project-card">
                  <img src="/assets/img/{{image}}" class="card-img-top" alt="Project Image"/>
                  <div class="card-body">
                    <h5 class="card-title">
                      <!-- Menggunakan <a> untuk mengarahkan ke halaman detail proyek -->
                      <a href="/myproject/{{this.id}}" class="btn btn-link project-title" style="text-decoration: none;"><strong>{{name}} - {{startYear}}</strong></a>
                    </h5>
                    <p class="card-text"><b>Duration :</b> {{duration}}</p>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text"><b>Technologies:</b><br>
                    {{#each technologies}}
                      <span class="badge bg-info">{{{icon}}} {{name}}</span>
                    {{/each}}
                  </p>
                    <div class="d-flex justify-content-between">
                      <a href="/update-project/{{this.id}}" class="btn btn-outline-info">Update</a>
                      <form action="/delete-project/{{this.id}}" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
          <div class="text-center mt-4">
            <a href="/add-project" class="btn btn-primary">Add New Project</a>
          </div>
        </div>
        <!-- End of Projects Section -->



<!-- Import JS -->
<script src="/assets/js/myproject.js"></script>
<!-- Import Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
